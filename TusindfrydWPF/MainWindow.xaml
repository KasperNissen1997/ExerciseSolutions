<Window x:Class="TusindfrydWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TusindfrydWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <StackPanel>
            <Label x:Name="FlowerSortPanel" Content="Blomstersort" HorizontalContentAlignment="Center"/>
            <TextBlock x:Name="FlowerSortListingTextBox" TextWrapping="Wrap" Background="#FFE6E6E6" Height="150" Margin="10,10,10,10"/>
            <Button x:Name="RegisterFlowerSortButton" Content="Opret blomstersort" Margin="25,0,25,0" Click="registerFlowerSortButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
