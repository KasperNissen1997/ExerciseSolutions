@model ForecastVM;

@{
    ViewData["Title"] = "Weather Forecast";
}
<div class="text-center">
    <div style="width: 50%; margin:auto">
        <form asp-action="Forecast">
            <div class="text-start">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label asp-for="RequestVM.CityName" class="control-label"></label>
                <input asp-for="RequestVM.CityName" class="form-control" />
                <span asp-validation-for="RequestVM.CityName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RequestVM.StateCode" class="control-label"></label>
                <input asp-for="RequestVM.StateCode" class="form-control" />
                <span asp-validation-for="RequestVM.StateCode" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RequestVM.CountryCode" class="control-label"></label>
                <input asp-for="RequestVM.CountryCode" class="form-control" />
                <span asp-validation-for="RequestVM.CountryCode" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="See weather forecast" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    @if (Model != null)
    {
        <div>
            <h4 class="text-center display-4">Forecast for @Model.RequestVM.CityName</h4>
            <hr />
            <table class="table">
                <tr>
                    <th>Date</th>
                    <th>@Html.DisplayNameFor(model => model.ResultVM.DailyWeather![0].WeatherDataEntries![0].Description)</th>
                    <th>@Html.DisplayNameFor(model => model.ResultVM.DailyWeather![0].Temperatures)</th>
                </tr>
                @foreach (var item in Model.ResultVM.DailyWeather!)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateFormatted)
                        </td>
                        <td>
                            <img src="@item.WeatherDataEntries![0].IconUrl" height="40" width="40">
                            @Html.DisplayFor(modelItem => item.WeatherDataEntries![0].TitleizedDescription)
                        </td>
                        <td>
                            <p>@Html.DisplayFor(modelItem => item.Temperatures.DayCelsius) <i>(Feels like @Html.DisplayFor(modelItem => item.TemperaturesFeelsLike.DayCelsius))</i></p>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
